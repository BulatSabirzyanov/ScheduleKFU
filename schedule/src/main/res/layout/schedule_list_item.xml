<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@android:color/white"
    android:elevation="5dp">

    <TextView
        android:id="@+id/tV_total_time_schedule"
        style="@style/TextTimeStyle"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:width="0dip"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:text="12:10-13:40" />

    <TextView
        android:id="@+id/tV_subject_name"
        style="@style/TextSubjectStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tV_total_time_schedule"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="математика" />

    <TextView
        android:id="@+id/tV_teacher_name"
        style="@style/TextTeacherStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@+id/tV_total_time_schedule"
        app:layout_constraintTop_toBottomOf="@+id/tV_subject_name"
        tools:text="Фаляновов.Ф.Ф" />

    <TextView
        android:id="@+id/tV_building_name"
        style="@style/TextTeacherStyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        app:layout_constraintStart_toEndOf="@+id/tV_total_time_schedule"
        app:layout_constraintTop_toBottomOf="@+id/tV_teacher_name"
        tools:text="кремлевская 18" />

    <TextView
        android:id="@+id/tV_auditory_id"
        style="@style/TextTeacherStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/tV_building_name"
        app:layout_constraintTop_toBottomOf="@+id/tV_teacher_name"
        tools:text="ауд 1310" />


</androidx.constraintlayout.widget.ConstraintLayout>